@model Registrar.Models.Course

<h2>Course Details</h2>
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
<h3>@Html.DisplayNameFor(model => model.CourseNumber): @Html.DisplayFor(model => model.CourseNumber)</h3>

@if (@Model.JoinEntities.Count == 0)
{
  <p>This course has no students enrolled</p>
}
else
{
  <h3>Course students:</h3>
  <h4>Current Students:</h4>
  <ul>
  @foreach (var join in Model.JoinEntities)
    {
      @if (!join.Complete)
      {
        <li>@join.Student.Name</li>
      }
    }
  </ul>
  <h4>Class Alumni:</h4>
  <ul>
  @foreach (var join in Model.JoinEntities)
    {
      @if (join.Complete)
      {
        <li>@join.Student.Name</li>
      }
    }
  </ul>
}

<p class="bottom-link">@Html.ActionLink("Edit course", "Edit", new { id = Model.CourseId })</p>
<p class="bottom-link">@Html.ActionLink("Delete course", "Delete", new { id = Model.CourseId })</p>