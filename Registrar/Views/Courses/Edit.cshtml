@model Registrar.Models.Course

<h4>edit course: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.CourseId)

  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.CourseNumber)
  @Html.EditorFor(model => model.CourseNumber)

  @Html.Label("Select department")
  @Html.DropDownList("DepartmentId")

  <button class="btn" type="submit">edit course</button>
}